@model Booking

@{
    ViewData["Title"] = " Booking Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1> Reservacion de hotel</h1>
<form asp-controller="BookingRegister" asp-action="Register" method="post" role="form">
    <div class="text-danger" asp-validation-summary="All"></div> 

   

    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CheckIn" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="CheckIn" class="form-control" />
            <span asp-validation-for="CheckIn" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CheckOut" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="CheckOut" class="form-control" />
            <span asp-validation-for="CheckOut" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="People" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="People" class="form-control" />
            <span asp-validation-for="People" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">

        <div class="col-md-10">
            <button type="submit" class="btn btn-primary">Crear</button> 

        </div>
    </div>

</form>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}